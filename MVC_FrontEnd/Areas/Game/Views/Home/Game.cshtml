@using MVC_FrontEnd.Areas.News.Models
@model MVC_FrontEnd.Areas.Game.Models.GameModel

<div id="content" class="app-content">


	<div class="d-flex align-items-center mb-3">
		<div>
			<h1 class="page-header mb-0"> <i class="fas fa-gamepad"></i> @Model.Name</h1>
		</div>

	</div>

	<hr class="my-6" />

	<div class="card bg-black bg-opacity-35">
		<div class="card-body" style="padding: 1px;">
			<img width="100%" src="@Model.BigLogo" alt="" class="rounded" />
		</div>

		<div class="card-arrow">
			<div class="card-arrow-top-left"></div>
			<div class="card-arrow-top-right"></div>
			<div class="card-arrow-bottom-left"></div>
			<div class="card-arrow-bottom-right"></div>
		</div>
	</div>


	<div class="row gx-4">
		<div class="col-lg-9">
			<div class="d-flex align-items-top mb-6">
				<ol style="margin-top: 1rem; margin-left: 1rem;" class="breadcrumb">
					<li class="breadcrumb-item"><a asp-area="game" asp-controller="home" asp-action="index"> GAMES</a></li>
					<li class="breadcrumb-item active">@Model.Name.ToUpper()</li>
				</ol>

			</div>
		</div>
		<div align="right" class="col-lg-3">
			<button type="button" style="margin-top: 0.6rem; margin-right: 1rem;" class="btn btn-outline-theme btn-sm "> Buy on STEAM <i class="fab fa-lg fa-fw me-0 fa-steam-symbol"></i></button>
		</div>
	</div>


	<div class="row gx-4">
		<div class="col-lg-9">


		<div class="card mb-4 ">
				@*				<div class="card-header d-flex align-items-center bg-white bg-opacity-15 fw-400">
				About game
				</div>*@



				<div class="card-body bg-black bg-opacity-25">






					<ul style="margin-top: -0.6rem;" class="nav nav-tabs nav-tabs-v2" role="tablist">
						<li class="nav-item">
							<a class="nav-link me-3 active" id="pills-home-tab" data-bs-toggle="pill" href="#pills-home">About game</a>
						</li>
						<li class="nav-item">
							<a class="nav-link me-3" id="pills-profile-tab" data-bs-toggle="pill" href="#pills-profile">News</a>
						</li>

					</ul>


					<div class="tab-content" id="pills-tabContent">
						<div class="tab-pane fade pt-3 show active" id="pills-home">@await Html.PartialAsync("_GamePartial", Model.Description)</div>
						<div class="tab-pane fade pt-3" id="pills-profile">@await Component.InvokeAsync("NewsList", new NewsSimpleModel { Id = Model.Id} )</div>

					</div>


				</div>

				<div class="card-arrow">
					<div class="card-arrow-top-left"></div>
					<div class="card-arrow-top-right"></div>
					<div class="card-arrow-bottom-left"></div>
					<div class="card-arrow-bottom-right"></div>
				</div>
			</div>


		</div>

		<div class="col-lg-3">


			<div class="desktop-sticky-top d-none d-lg-block">

				<div class="card mb-4 ">
					<div class="card-header d-flex align-items-center bg-white bg-opacity-15 fw-400">
						Details
						<a href="#" class="ms-auto text-decoration-none text-white text-opacity-50">Edit</a>
					</div>
					<div class="card-body bg-black bg-opacity-25">


						<div class="fw-bold mb-2">Genres</div>

						<ul class="tagit form-control ui-widget border-0">
							<li class="tagit-choice"><span class="tagit-label"><a href="" class="text-light text-decoration-none">RPG</a></span></li>
							<li class="tagit-choice"><span class="tagit-label"><a href="" class="text-light text-decoration-none">Strategy</a></span></li>
							<li class="tagit-choice"><span class="tagit-label"><a href="" class="text-light text-decoration-none">Sandbox</a></span></li>
							<li class="tagit-choice"><span class="tagit-label"><a href="" class="text-light text-decoration-none">Survival</a></span></li>
							<li class="tagit-choice"><span class="tagit-label"><a href="" class="text-light text-decoration-none">RPG</a></span></li>
							<li class="tagit-choice"><span class="tagit-label"><a href="" class="text-light text-decoration-none">Economy</a></span></li>
							<li class="tagit-choice"><span class="tagit-label"><a href="" class="text-light text-decoration-none">COOP</a></span></li>
							<li class="tagit-choice"><span class="tagit-label"><a href="" class="text-light text-decoration-none">Multyplayer</a></span></li>
							<li class="tagit-choice"><span class="tagit-label"><a href="" class="text-light text-decoration-none">Dedicated server</a></span></li>
						</ul>

						<div style="margin-top: 0.7rem;" class="fw-bold mb-2">Types</div>

						<ul class="tagit form-control ui-widget border-0">
							<li class="tagit-choice"><span class="tagit-label"><a href="" class="text-light text-decoration-none">Single player</a></span></li>
							<li class="tagit-choice"><span class="tagit-label"><a href="" class="text-light text-decoration-none">Cooperative</a></span></li>
							<li class="tagit-choice"><span class="tagit-label"><a href="" class="text-light text-decoration-none">Dedicated server</a></span></li>
							<li class="tagit-choice"><span class="tagit-label"><a href="" class="text-light text-decoration-none">Multyplayer</a></span></li>
						</ul>

						<hr>
						<div class="d-flex">
							<div class="flex-1 d-flex">
								<div>Realese date:</div>
								<span class="badge bg-white bg-opacity-15 text-theme fw-bold fs-12px ms-auto me-2">2022-01-05</span>
							</div>
						</div>

						<div class="d-flex">
							<div class="flex-1 d-flex">
								<div>Developer:</div>
								<span class="bg-opacity-15 text-theme fw-bold fs-12px ms-auto me-2">Avalanche Software</span>
							</div>
						</div>

						<div class="d-flex">
							<div class="flex-1 d-flex">
								<div>Publisher:</div>
								<span class="bg-opacity-15 text-theme fw-bold fs-12px ms-auto me-2">Warner Bros. Games</span>
							</div>
						</div>


					</div>
					<div class="card-arrow">
						<div class="card-arrow-top-left"></div>
						<div class="card-arrow-top-right"></div>
						<div class="card-arrow-bottom-left"></div>
						<div class="card-arrow-bottom-right"></div>
					</div>
				</div>


			</div>

		</div>

	</div>

</div>