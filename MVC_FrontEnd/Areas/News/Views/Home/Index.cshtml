@model MVC_FrontEnd.Areas.News.ViewModels.NewsListViewModel


<div id="content" class="app-content">

    <div class="row gx-4">
        <div class="d-flex align-items-center mb-3">
            <div>
                <h1 class="page-header mb-0"> <i class="fas fa-gamepad"></i> News</h1>
            </div>
        </div>
        <hr class="my-6" />


        <div class="col-lg-9">


                @foreach (var item in Model.NewsSimple)
                {
                    <div class="card mb-4 ">
                        <div class="card-body bg-black bg-opacity-25">

                            <h4><a asp-area="News" asp-controller="Home" asp-action="Read" asp-route-id="@item.Id">@item.Title</a></h4>
                            @Html.Raw(item.ShortText)

                        </div>

                        <div class="card-arrow">
                            <div class="card-arrow-top-left"></div>
                            <div class="card-arrow-top-right"></div>
                            <div class="card-arrow-bottom-left"></div>
                            <div class="card-arrow-bottom-right"></div>
                        </div>
                    </div>

                }


            <!-- BEGIN pagination -->
            @await Html.PartialAsync("_PaginatorPartial", Model.Paginator)
            <!-- END pagination -->

        </div>

        <div class="col-lg-3">
            <div class="card mb-4 ">
                <div class="card-body bg-black bg-opacity-25">

                    <div>Blok navigation</div>


                </div>

                <div class="card-arrow">
                    <div class="card-arrow-top-left"></div>
                    <div class="card-arrow-top-right"></div>
                    <div class="card-arrow-bottom-left"></div>
                    <div class="card-arrow-bottom-right"></div>
                </div>
            </div>
        </div>

    </div>
</div>